<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- This is the theme that we should be currently using as of 18/10/2016
         It was changed from Theme.AppCompat.NoActionBar to use this theme from
         style as a custom version. Change this theme to universally change activity
         elements like background colour etc
    -->
    <style name="jasonsTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@color/background</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="activitySummary">
        <item name="android:textSize">20sp</item>
    </style>

<!-- The Following were setup for Jason's activities -->
<!-- For use with the food menu. Maybe others also - Jason -->
    <style name="menuTitleStyle">
        <item name ="android:textSize">40sp</item>
        <item name ="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="menuMainChoices" >
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">25sp</item>
    </style>

<!-- End -->
</resources>
